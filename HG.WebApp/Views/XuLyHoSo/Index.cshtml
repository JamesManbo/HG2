@{
    ViewData["Title"] = "Xử lý hồ sơ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/BackEnd/Admin/Css/font-awesome.min.css"  />
   <link rel="stylesheet" href="~/BackEnd/Admin/Css/style.default.css"  />
   @*<link rel="stylesheet" href="~/BackEnd/Admin/Css/bootstrap.css"  />*@

<div id="ctl08_PnGrid" onkeypress="javascript:return WebForm_FireDefaultButton(event, 'BtnSearch')">

    <div class="pageheader">
        <div class="searchbar">
            <input name="ctl08$Search" type="text" id="Search" placeholder="Gõ từ khóa và nhấn enter...">
            <input type="submit" name="ctl08$BtnSearch" value="" onclick="return CheckSearch();" id="BtnSearch" hidden="hidden">
        </div>
        <div class="pageicon"><span class="iconfa-table"></span></div>
        <div class="pagetitle">
            <h5>Danh sách</h5>
            <h1>Hồ sơ chờ xử lý</h1>
        </div>
    </div>

    <div class="maincontent">
        <div class="maincontentinner">
            <div class="widget">
                <h4 class="widgettitle">Lọc danh sách theo</h4>
                <div class="widgetcontent">
                    <div class="form-group">
                        <label class="col-md-2 control-label" style="text-align: right">Lĩnh vực</label>
                        <div class="col-md-10">
                            <select name="ctl08$ddlLinhVuc" onchange="javascript:setTimeout('__doPostBack(\'ctl08$ddlLinhVuc\',\'\')', 0)" id="ctl08_ddlLinhVuc" class="form-control input-default-sm">
                                <option selected="selected" value="">----- Chọn lĩnh vực -----</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" style="text-align: right">Thủ tục</label>
                        <div class="col-md-10">
                            <select name="ctl08$drpThuTuc" onchange="javascript:setTimeout('__doPostBack(\'ctl08$drpThuTuc\',\'\')', 0)" id="ctl08_drpThuTuc" class="form-control input-default-sm">
                                <option selected="selected" value="">----- Chọn thủ tục hành chính -----</option>

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" style="text-align: right">Trạng thái</label>
                        <div class="col-md-10">
                            <table id="ctl08_rblTrangThai" border="0" style="margin-top: 4px;">
                                <tbody>
                                    <tr>
                                        <td><input id="ctl08_rblTrangThai_0" type="radio" name="ctl08$rblTrangThai" value="0" checked="checked"><label for="ctl08_rblTrangThai_0">&nbsp; Tất cả &nbsp;&nbsp;</label></td>
                                        <td><input id="ctl08_rblTrangThai_1" type="radio" name="ctl08$rblTrangThai" value="1" onclick="javascript:setTimeout('__doPostBack(\'ctl08$rblTrangThai$1\',\'\')', 0)"><label for="ctl08_rblTrangThai_1">&nbsp; Đúng hạn &nbsp;&nbsp;</label></td>
                                        <td><input id="ctl08_rblTrangThai_2" type="radio" name="ctl08$rblTrangThai" value="2" onclick="javascript:setTimeout('__doPostBack(\'ctl08$rblTrangThai$2\',\'\')', 0)"><label for="ctl08_rblTrangThai_2">&nbsp; Quá hạn &nbsp;&nbsp;</label></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

            <div>
                <table class="table table-bordered responsive" cellspacing="0" rules="all" border="1" id="ctl08_RepeaterTable" style="width:100%;border-collapse:collapse;">
                    <tbody>
                        <tr>
                            <td colspan="6">Chưa có dữ liệu hiển thị</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="table-paginate-new" align="right" style="background-color:#EEEEEE;"></div>

            <div class="modal fade" id="myModal"><div class="modal-dialog"><div class="modal-content"><div class="modal-header widgettitle"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button><h4 class="modal-title">Danh sách</h4></div><div class="modal-body"></div><div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button></div></div></div></div><div class="footer"><div class="footer-left"><span id="LeftFooter">© 2015. STTTT. All Rights Reserved.</span></div><div class="footer-right"></div></div><!--footer-->
        </div>
    </div>

</div>