@using HG.WebApp
@model List<HG.Entities.Dm_Buoc_Xu_Ly>

<div style="overflow-y: auto;">
    <div id="pnlMain">
        <div>
            <table class="table table-bordered responsive" cellspacing="0" rules="all" border="1" id="ctl02_gridMenu" style="width: 100%; border-collapse: collapse;">
                <tbody>
                    <tr class="widgettitle">
                        <th align="center" scope="col">CHỌN</th>
                        <th scope="col">TÊN</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center">
                                <a href="#" onclick="SetDataBXL('@item.ma_buoc_xu_ly','@item.ten_buoc_xu_ly')">Chọn</a>
                            </td>
                            <td>
                                @item.ten_buoc_xu_ly
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    function SetDataBXL(code, name) {
        $("#ma_buoc_xu_ly").val(code);
        $("#ten_buoc_xu_ly").val(name);
        $('#ModalBXL').modal("hide");
    }
</script>