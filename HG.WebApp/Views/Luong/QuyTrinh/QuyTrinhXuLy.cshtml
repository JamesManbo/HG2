@using HG.WebApp
@{
    ViewData["Title"] = "Quy trình xử lý";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<HG.Entities.Entities.Luong.QuyTrinhXuLy>
<style>
