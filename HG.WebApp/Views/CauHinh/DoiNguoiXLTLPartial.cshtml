@{
        var danhSachNguoiDung = ViewBag.DanhSachNguoiDung as List<HG.WebApp.AspNetUsers>;
}

        <div class="form-horizontal">
                <div class="form-group">
                            <label class="col-md-12 control-label" style="text-align: center; color: red">Khi thực hiện thay thế, toàn bộ các bước khai báo trong luồng xử lý do Người xử lý hiện tại đảm nhận sẽ được thay bằng Người được chọn thay thế!!! </label>
                </div>
                <div class="form-group row">
                            <label class="col-sm-2 control-label">
                                Người xử lý hiện tại:
                            </label>
                            <div class="col-sm-8">
                                <select name="ma_nguoi_xl_hien_tai" id="ma_nguoi_xl_hien_tai" class="form-control input-default form-select"  placeholder="Chọn xử lý hiện tại">
                                    <option value="0">Người xử lý hiện tại</option>
                                    @if(danhSachNguoiDung != null)
                                    {
                                         foreach (var item in danhSachNguoiDung)
                                         {
                                            <option value="@item.Id">@(item.ho_dem + " " +item.ten )</option>
                                         }   
                                    }
                                </select>
                            </div>
                            <div class="col-sm-2"><input type="button" class="btn btn-primary" value="  Lọc  " onclick="LocNguoiXuLyHienTai()"/></div>
                </div>
             
                <div class="form-group row">
                            <label class="col-sm-2 control-label">
                                Người xử lý thay thế:
                            </label>
                            <div class="col-sm-8">
                                <select name="ma_nguoi_dung_thay_thetl" id="ma_nguoi_dung_thay_thetl" class="form-control input-default form-select" placeholder="Chọn người dùng thay thế">
                                    <option value="0">Chọn người xử lý thay thế</option>
                                    @if(danhSachNguoiDung != null)
                                    {
                                         foreach (var item in danhSachNguoiDung)
                                         {
                                            <option value="@item.Id">@(item.ho_dem + " " +item.ten )</option>
                                         }   
                                    }
                                </select>
                            </div>
                            
                </div>
                <script>
                    function LocNguoiXuLyHienTai() {
                        var ma_nguoi_xl_hien_tai = document.getElementById("ma_nguoi_xl_hien_tai").options[document.getElementById("ma_nguoi_xl_hien_tai").selectedIndex].value;
                        var ma_nguoi_dung_thay_the = document.getElementById("ma_nguoi_dung_thay_thetl").options[document.getElementById("ma_nguoi_dung_thay_thetl").selectedIndex].value;
                        $.ajax({
                           type: "GET",
                           url: "/CauHinh/DoiNguoiXLTLList?ma_nguoi_dung="+ma_nguoi_xl_hien_tai + "&ma_nguoi_dung_thay_the="+ma_nguoi_dung_thay_the,
                           data: "",
                           contentType: 'application/json; charset=utf-8',
                            success: function(data) {
                                $("#LocNguoiXuLyHienTai").html(data);
                            }
                         });
                    }
                    
                </script>
        </div>
        <div class="dataTable-wrapper dataTable-loading no-footer sortable searchable fixed-columns">
                 <div id="LocNguoiXuLyHienTai">
                    
               
                </div>
        </div>


           