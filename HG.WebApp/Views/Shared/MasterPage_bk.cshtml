    <script>
       function RegisterFC(){
                $('#register').modal('toggle');
                $('#register').modal('show');
                $('#login').modal('hide');}
       function LoginClient(){
            $.ajax({
                    type: "POST",
                    url: "@Url.Action("LoginClient","User")",
                    data: {UserName: $("#UserName").val(), PassWord: $("#PassWord").val()},
                    dataType: "text",
                    success: function (msg) {
                       if(msg == "true"){
                            window.location.href = "/YellowPage"
                       }else{
                            alertmsg.error("please check username or password");
                       }
                    },
                    error: function (req, status, error) {
                        alertmsg.error("please check username or password");
                    }
                }); }
       function LogoutClient(){
           window.location.href = "/User/LogoutClient"}
       function AddListting(){
           window.location.href = "/AddListting"}
       function LoginFC(){ 
            $('#login').modal('toggle');
            $('#login').modal('show');
            $('#register').modal('hide');}
       function CreateAccount(){
             if($("#UserNameR").val() == '' || $("#UserNameR").val() == undefined || $("#GmailR").val() == '' || $("#GmailR").val() == undefined){
                  alertmsg.success("Bạn chưa nhập tên hoặc gmail");
                  return false;
             }else if($("#PassWordR").val() == '' || $("#PassWordR").val() == undefined){
                 alertmsg.success("Bạn chưa nhập mật khẩu");
                 return false;
             }else if($("#PassWordR").val() != $("#ConfirmPassWord").val()){
                 alertmsg.success("Mật khẩu chưa giống nhau!");
                 return false;
             }else{
                  $.ajax({
                    type: "POST",
                    url: "@Url.Action("RegisterClient","User")",
                    data: {UserName: $("#UserNameR").val(), PassWord: $("#PassWordR").val(), Gmail: $("#GmailR").val()},
                    dataType: "text",
                    success: function (msg) {
                       if(msg == "true"){
                            
                             $('#login').modal('toggle');
                            $('#login').modal('show');
                            $('#register').modal('hide');
                            alertmsg.success("register success, please login your account");
                            return false;
                       }else if(msg == "ErrUsername"){
                            alertmsg.error("Tên tài khoản đã có trong hệ thống");
                            return false;
                       }else if(msg == "ErrEmail"){
                           alertmsg.error("Gmail đã có trong hệ thống");
                           return false;
                       }else{
                           alertmsg.error("Mật khẩu gồm một chữ hoa, một chữ thường và 1 số");
                            return false;
                       }
                    },
                    error: function (req, status, error) {
                       alertmsg.error("Mật khẩu gồm một chữ hoa, một chữ thường và 1 số");
                    }
                }); 
             }}
       function ProfileFC(username){
           window.location.href = "/User/Profile?username=" + username
       }
    </script>
