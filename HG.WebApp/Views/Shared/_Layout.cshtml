                                ĐĂNG NHẬP / ĐĂNG KÝ
                            </div>
                            <div class="login-box-inner">
                                <div class="content">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text h-100" id="basic-addon1">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control" id="txtTaiKhoan" placeholder="Tài khoản" aria-label="Tài khoản"aria-describedby="basic-addon1" />
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text h-100" id="basic-addon1"><i class="fa-solid fa-lock"></i></span>
                                        </div>
                                        <input type="password" class="form-control" id="txtMatKhau" placeholder="Mật khẩu" aria-label="Mật khẩu" aria-describedby="basic-addon1" />
                                    </div>
                                    <label class="checkbox-inline">
                                        <input class="form-check-input" id="checkbox-remember" type="checkbox" />
                                        Lưu thông tin đăng nhập
                                    </label>
                                    <div class="button-wrapper text-center my-2">
                                        <button type="button" class="btn-common btn-login" onclick="LoginDVC()">
                                            Đăng nhập
                                        </button>
                                        <button type="button" class="btn-common btn-register" onclick="LogoutDVC()">
                                            Đăng ký
                                        </button>
                                    </div>
                                    <script>
                                        function LoginDVC(){
                                            if ($("#txtTaiKhoan").val() == "") {
                                                $("#thongbao").html("Bạn cần nhập tên đăng nhập!!!")
                                                $("#exampleModal").modal("show");
                                                return;
                                            };
                                            if ($("#txtMatKhau").val() == "") {
                                                $("#thongbao").html("Bạn cần nhập mật khẩu!!!")
                                                $("#exampleModal").modal("show");
                                                return;
                                            };
                                            $.ajax({
                                                url: "/News/Login?txtTaiKhoan=" + $("#txtTaiKhoan").val() + "&txtMatKhau=" + $("#txtMatKhau").val(),
                                                type: "get",
                                                contentType: 'application/json; charset=utf-8',
                                                data: "",
                                                success: function (result) {
                                                    if (result == "false"){
                                                        $("#thongbao").html("Tài khoản hoặc mật khẩu không chính xác!!!")
                                                        $("#exampleModal").modal("show");
                                                    }else{
                                                         window.location.href = "/DichVuCong";
                                                    }
                                                }
                                            });
                                        }
                                    </script>
                                    <div class="lg-chucnang">
                                        <div class="lg-more">
                                            <i class="fa-solid fa-circle-info login-icon"></i>
                                            <a class="other_login_method" href="#">Đăng nhập bằng cổng DVC Quốc Gia</a>
                                        </div>
                                        <div class="lg-forgotpw">
                                            <i class="fa-solid fa-key login-icon"></i>
                                            <a class="other_login_method" href="#">Quên mật khẩu</a>
                                        </div>
                                        <div class="lg-activate">
                                            <i class="fa-solid fa-envelope-circle-check login-icon"></i>
                                            <a class="other_login_method" href="#">Gửi email kích họat</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }else{
                        @Html.RenderAction("GroupDonVi","News")
                    }
