<div class="card">
    <div class="card-body">
         <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Danh sách Slider</h3>
                        <a href="" class="btn btn-primary pull-right" data-toggle="modal" data-target="#addSliderModal">Thêm mới</a>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                                @{int i = 1;}
                                <tr>
                                    <th>Mã Slider</th>
                                    <th>Tên Slider</th>
                                    <th>Ảnh</th>
                                    <th>Mục</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model.ToList())
                                {
                                    <tr>
                                     
                                        <td style="vertical-align: middle">@item.Id</td>
                                        <td style="vertical-align: middle">@item.SliderName</td>
                                     @*   <td style="vertical-align: middle">
                                                  @item.ParentId
                                        </td>*@
                                        <td style="vertical-align: middle"><img src="@(item.SliderUrl == null ? "" : item.SliderUrl)" style="width: 100px; height: 70px" /></td>
                                         <td style="vertical-align: middle">@(item.IsPartner == 0 ? "Slider" : "Partner") </td>
                                        <td style="vertical-align: middle">
                                            @Html.Raw( item.Status == 0 ? "<span style='color:#2b6893;cursor: pointer;' onclick='UpdateStatus(" + @item.Id + ")'>Ẩn</span>" : "<span style='color:red;cursor: pointer;' onclick='UpdateStatus(" + @item.Id + ")'>Hiện</span>")
                                        </td>
                                       
                                        <td style="vertical-align: middle">
                                            <a href="" class="btn btn-warning btn-bordered" id="addData-@(i-1)" name = "@(item.SliderName + ";" + item.SliderUrl + ";" + item.Status + ";" + item.IsPartner)" data-toggle="modal" data-target="#EditNationModal" title="sửa">
                                                <i class="glyphicon glyphicon-pencil"></i>
                                            </a>
                                              <script>
                                                $('#addData-@(i-1)').click(function () {
                                                    $("#EditSliderID").val(@item.Id);
                                                    $("#EditName" ).val($('#addData-@(i-1)').attr('name').split(';')[0])
                                                    $("#ImagePath-edit").val($('#addData-@(i-1)').attr('name').split(';')[1]);
                                                    if($('#addData-@(i-1)').attr('name').split(';')[2] ==1){$("#EditStatus1").prop("checked", true);} else { $("#EditStatus0").prop("checked", true);}
                                                    var img = $('#addData-@(i-1)').attr('name').split(';')[1];
                                                    $("#view-card-edit").attr('src', img);
                                                    $("#EditIsPartner").val($('#addData-@(i-1)').attr('name').split(';')[3]);
                                                    $('#EditSliderModal').show();
                                                });
                                            </script>
                                            <a onclick="confirm.BeforDelete('/Slider/Delete/@item.Id')" class="btn btn-danger btn-bordered" title="xóa">
                                                <i class="glyphicon glyphicon-trash"></i>
                                            </a>
                                        </td>
                                     
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                        <div class="bv_pagging">
                            @if (Model.PageCount > 1)
                            {
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, status = ViewBag.status }),
                                 new  X.PagedList.Web.Common.PagedListRenderOptions{
                                       LiElementClasses = new string[] { "page-item" },
                                       PageClasses = new string[] { "page-link" }
                                })
                            }
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
    </div>
        <div class="modal" role="dialog" id="addSliderModal" style="background:transparent !important;">
            <div class="modal-dialog">
                <div class="modal-content">
                    @using (Html.BeginForm("Add", "Slider", FormMethod.Post, new { enctype = "multipart/form-data", id = "formslider" }))
                    {
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">x</span>
                            </button>
                            <h4 class="modal-title">Thêm Slider hoặc Partner</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <input type="hidden" id="SliderId" name="SliderId" />
                                        <label>Tên Slider</label>
                                    </div>
                                    <div class="col-xs-9">
                                        <input type="text" name="SliderName" id="SliderName" class="form-control" />
                                    </div>
                                </div>
                               
                               <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Ảnh Slider</label>
                                    </div>
                                    <div class="col-xs-9">
                                     <div class="">
                                         <input class="form-control hidden" id="ImagePath" name="SliderUrl"  style="display: none">
                                        <input type="file" id="postedFiles" name="postedFiles" multiple="" style="display: none">
                                        <button type="button" onclick="$('#postedFiles').click();" class="btn btn-default"><i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;Chọn File</button>
                                        <img id="view-card" src="" style="margin-top: 10px;" width="100" />
                                    </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Là Slider hoặc Partner</label>
                                    </div>
                                    <div class="col-xs-9">
                                        <select class="form-control" name="IsPartner" id="IsPartner">
                                               <option value="0">Là Slider</option>
                                               <option value="1">Là Partner</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Hiển thị</label>
                                    </div>
                                    <div class="col-xs-9">
                                      Ẩn <input type="radio" name="Status" value="0"> 
                                      Hiện  <input type="radio" name="Status" checked value="1"> 
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <button id="btnAccept" class="btn btn-primary">Đồng ý</button>
                                    <button id="btnCancel" class="btn btn-default pull-right" data-dismiss="modal">Hủy bỏ</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="modal" role="dialog" id="EditSliderModal" style="background:transparent !important;">
            <div class="modal-dialog">
                <div class="modal-content">
                    @using (Html.BeginForm("Edit", "Slider", FormMethod.Post, new { enctype = "multipart/form-data", id = "formEditslider" }))
                    {
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">x</span>
                            </button>
                            <h4 class="modal-title">Chỉnh sửa Slider</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <input type="hidden" id="EditSliderID" name="SliderId" />
                                        <label>Tên Slider</label>
                                    </div>
                                    <div class="col-xs-9">
                                        <input type="text" name="ESliderName" id="EditName" class="form-control" />
                                    </div>
                                </div>
                               
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Ảnh Slider</label>
                                    </div>
                                    <div class="col-xs-9">
                                     <div class="">
                                         <input class="form-control hidden" id="ImagePath-edit" name="ESliderUrl"  style="display: none">
                                        <input type="file" id="fileIconEdit" name="IconEdit" multiple="" style="display: none">
                                        <button type="button" onclick="$('#fileIconEdit').click();" class="btn btn-default"><i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;Chọn File</button>
                                        <img id="view-card-edit" src="" style="margin-top: 10px;" width="100" />
                                    </div>
                                    </div>
                                </div>
                                  <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Là Slider hoặc Partner</label>
                                    </div>
                                    <div class="col-xs-9">
                                        <select class="form-control" name="IsPartner" id="EditIsPartner">
                                               <option value="0">Là Slider</option>
                                               <option value="1">Là Partner</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12 col-xs-12">
                                    <div class="col-xs-3">
                                        <label>Hiển thị</label>
                                    </div>
                                    <div class="col-xs-9">
                                      Ẩn <input type="radio" id="EditStatus0" name="EStatus" value="0"> 
                                      Hiện  <input type="radio" id="EditStatus1" name="EStatus" value="1"> 
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <button id="btnAccept" class="btn btn-primary">Đồng ý</button>
                                    <button id="btnCancel" class="btn btn-default pull-right" data-dismiss="modal">Hủy bỏ</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
<div class="c"></div>

</div>
