@model HG.Entities.DanhMuc.dm_bieu_mau.dm_bieu_mau
 <script>
        $(document).ready(function() {
             CKEDITOR.replace('ckedit1');
        });
</script>
@using (Html.BeginForm("ThemBieuMau", "ThuTuc", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "form_pb" }))
 {
        <div class="row mb-3">
            <div class="col-sm-12">
                <textarea id="ckedit1" class="form-control input-default" placeholder="Mô tả" name="ckedit1">@Html.Raw(Model.mo_ta)</textarea>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-1 control-label" for="stt" style="padding: 10px;">Tên file</label>
            <div class="col-sm-5">
                <input type="text" class="form-control input-default" name="ten_bieu_mau" id="ten_bieu_mau" value="@Model.ten_bieu_mau" placeholder="Tên file">
            </div>
            <div class="col-sm-1">
                <button class="control-label btn btn-primary" type="submit" style="float:right;width:100%;height:100%">Lưu</button>
            </div>
            <div class="col-sm-5">
                <button class="control-label btn btn-primary" style="float:right;height:100%">Đóng</button>
            </div>
        </div>
 }                       


