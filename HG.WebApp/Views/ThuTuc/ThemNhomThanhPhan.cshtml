@using HG.WebApp
@model HG.Entities.dm_nhom_tp

            <h4 class="widgettitle">Cập nhật thông tin nhóm thành phần</h4>
            <div class="widgetcontent">
                <div class="form-horizontal">
                    <!-- Horizontal Form -->
                    <form id="form_nhom_tp" action="/ThuTuc/ThemVBLQ" method="post" enctype="multipart/form-data">
                        <input id="Id" name="Id" value="@Model.Id" hidden />
                        <div class="row mb-3">
                            <label for="ma_pb" class="col-sm-2 control-label">Mã văn bản <span style="color:red">(*)</span></label>
                            <div class="col-sm-8">
                                <input type="text" id="ma_thu_tuc" class="form-control input-default"  maxlength="50" name="ma_thu_tuc" required  value="@Model.ma_thu_tuc" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                            <div class="col-sm-1">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
                                    Chọn
                                </button>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="ten_pb" class="col-sm-2 control-label">Mã nhóm <span style="color:red">(*)</span></label>
                            <div class="col-sm-8">
                                <input type="text" maxlength="250" id="ma_nhom" class="form-control input-default" required name="ma_nhom" value="@Model.ma_nhom" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                        </div>  
                        <div class="row mb-3">
                            <label for="ten_pb" class="col-sm-2 control-label">Tên nhóm <span style="color:red">(*)</span></label>
                            <div class="col-sm-8">
                                <input type="text" maxlength="250" id="ten_nhom" class="form-control input-default" required name="ten_nhom" value="@Model.ten_nhom" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="mota" class="col-sm-2 control-label">Mô tả</label>
                            <div class="col-sm-8">
                                <textarea class="form-control input-default" maxlength="250" placeholder="Mô tả" name="mo_ta" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>@Model.mo_ta</textarea>
                            </div>
                        </div>
                 
                        <div class="row mb-3">
                            <label for="stt" class="col-sm-2 control-label">Thứ tự</label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control input-default" name="stt" value="@Model.Stt" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button type="button" class="btn btn-primary" onclick="SaveAddNhomTP()">Lưu và thêm</button>
                            <button type="button" class="btn btn-primary" onclick="SaveNhomTP()">Lưu</button>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='/ThuTuc/QuanLy';">Đóng</button>
                        </div>
                    </form>
                </div>

            </div>