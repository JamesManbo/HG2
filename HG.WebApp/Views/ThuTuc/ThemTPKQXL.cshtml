@using HG.WebApp
@model HG.Entities.dm_thanh_phan_kqxl

            <h4 class="widgettitle">Cập nhật thông tin thành phần kết quả xử lý</h4>
            <div class="widgetcontent">
                <div class="form-horizontal">
                    <!-- Horizontal Form -->
                    <form id="form_nhom_tp_kq" action="/ThuTuc/SaveAddTPKQXL" method="post" enctype="multipart/form-data">
                        <input id="Id" name="Id" value="@Model.Id" hidden />
                         <input id="ma_thu_tuc" name="ma_thu_tuc" value="@Model.ma_thu_tuc" hidden />
                       
                        <div class="row mb-3">
                            <label for="ten_pb" class="col-sm-2 control-label">Mã thành phần kết quả <span style="color:red">(*)</span></label>
                            <div class="col-sm-8">
                                <input type="text" maxlength="250" id="ma_tp_kq" class="form-control input-default" required name="ma_tp_kq" value="@Model.ma_tp_kq" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                             <div class="col-sm-1">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
                                    Chọn
                                </button>
                            </div>
                        </div>  
                        <div class="row mb-3">
                            <label for="ten_pb" class="col-sm-2 control-label">Tên thành phần kết quả <span style="color:red">(*)</span></label>
                            <div class="col-sm-8">
                                <input type="text" maxlength="250" id="ten_tp_kq" class="form-control input-default" required name="ten_tp_kq" value="@Model.ten_tp_kq" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="mota" class="col-sm-2 control-label">Mô tả</label>
                            <div class="col-sm-8">
                                <textarea class="form-control input-default" maxlength="250" placeholder="Mô tả" name="mo_ta" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>@Model.mo_ta</textarea>
                            </div>
                        </div>
                 
                        <div class="row mb-3">
                            <label for="stt" class="col-sm-2 control-label">Thứ tự</label>
                            <div class="col-sm-8">
                                <input type="number" class="form-control input-default" name="Stt" value="@Model.Stt" @(ViewBag.type_view == StatusAction.View.ToString() ? "disabled" : "")>
                            </div>
                        </div>
                        
                        <div class="text-center">
                            <button type="button" class="btn btn-primary" onclick="SaveAddNhomTPKQ()">Lưu và thêm</button>
                            <button type="button" class="btn btn-primary" onclick="SaveNhomTPKQ()">Lưu</button>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='/ThuTuc/QuanLy';">Đóng</button>
                        </div>
                    </form>
                </div>

            </div>