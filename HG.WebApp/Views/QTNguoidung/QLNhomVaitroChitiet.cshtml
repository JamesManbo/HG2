                                                    };
                                                }
                                                else
                                                {
                                                    for (int i = 1; i <= TotalPage; i++)
                                                    {
                                                        if (i == CurrentPage)
                                                        {
                                                                                <span><a tabindex="0" class="active paginate_active" onclick="GetListByCurrentPage(@i)">@i</a></span>
                                                        }
                                                        else
                                                        {
                                                                                <span><a tabindex="0" class=" paginate_active" onclick="GetListByCurrentPage(@i)">@i</a></span>
                                                        }
                                                    }
                                                }
                                            }
