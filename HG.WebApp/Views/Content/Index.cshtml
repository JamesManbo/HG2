                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer5, new { @class = "form-control" })
                                    </div>
                            </div>
                              <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 5</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer6, new { @class = "form-control" })
                                    </div>
                            </div>
                              <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 6</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer7, new { @class = "form-control" })
                                    </div>
                            </div>
                              <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 7</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer8, new { @class = "form-control" })
                                    </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 9</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer9, new { @class = "form-control" })
                                    </div>
                            </div>
                                  
                          </div></div>
                </div>
               
                
                
                <div class="card-footer">
                          <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
    </div>
</div>

