@{
    ViewData["Title"] = "Quan ly Content";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model HG.WebApp.Entities.Content
<script src="~/BackEnd/Admin/Js/Validate/content.js"></script>

<script type="text/javascript"> 
    $(document).ready(function () {
            content.validateForm();
    });</script> 
<div class="container-fluid">
    <div class="">
            <div class="box-header with-border">
                <h3 class="box-title">Chỉnh sửa content</h3>
                 <h3 style="color:red">@ViewBag.Message</h3>
            </div>
            @using (Html.BeginForm("Index", "Content", FormMethod.Post, new { @class = "row", enctype = "multipart/form-data", id = "formcontent" }))
            {
                
                 <input value="@Model.Id" name="Id" hidden/>
                <div class="col-md-6">
                       <div class="card card-success">
                         <div class="card-header">
                            <h3 class="card-title">Content</h3>
                         </div>
                        <div class="card-body">
                                <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-phone fa-fw"></i> tiêu đề</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.title, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-mobile fa-fw"></i>  Tiêu đề  (chữ đậm)</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.title_Bold, new { @class = "form-control" })
                                    </div>
                                </div>
                               <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-fax fa-fw"></i> Mô tả 1 (chữ đậm)</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des1_Bold, new { @class = "form-control" })
                                    </div>
                                    <!-- /.input group -->
                                </div>    
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-envelope fa-fw"></i>  Mô tả 1</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des1_Normal, new { @class = "form-control" })
                                    </div>
                                    <!-- /.input group -->
                                </div>    
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-globe fa-fw"></i> Mô tả 2 (chữ đậm)</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des2_Bold, new { @class = "form-control" })
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-globe fa-fw"></i> Mô tả 2</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des2_Normal, new { @class = "form-control" })
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-globe fa-fw"></i> Mô tả 3 (chữ đậm)</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des3_Bold, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"> <i class="fa fa-globe fa-fw"></i> Mô tả 3 </label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.Des3_Normal, new { @class = "form-control" })
                                    </div>
                                </div>
                           </div>
                    </div>
                </div>
                <div class="col-md-6">
                          <div class="card card-success">
                          <div class="card-header">
                            <h3 class="card-title">Footer</h3>
                          </div>
                          <div class="card-body">
                            <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-twitter-square fa-fw"></i>  Clients & partners</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer1, new { @class = "form-control" })
                                    </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>  Footer 1</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer2, new { @class = "form-control" })
                                    </div>
                            </div>
                              <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 2</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer3, new { @class = "form-control" })
                                    </div>
                            </div>
                                 <div class="form-group">
                                <label class="col-sm-2 control-label"><i class="fa fa-facebook-square fa-fw"></i>   Footer 3</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(g => g.info_footer4, new { @class = "form-control" })
